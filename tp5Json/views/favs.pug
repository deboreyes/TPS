extends layout

block content
	.favsContainer
		.head
			h2 Mis Favoritos
			a(href="/")
				img#close(src="/images/close.png", alt="salir")
		.imgsContainer
			if result.message
				.message
					h2=result.message
			else
				for img in result.imgsArray
					figure(id=img.id)
						a(href="/dog/"+img.id)
							img.dogImg(src="/images/"+img.src+".jpg", alt="perro")
						figcaption
							if (img.fav==true)
								.fav.heart
							else
								.heart
							a(href="/dog/"+img.id)
								img.glass(src="/images/glass.png", alt="ver")
							label#name #{img.name}
							label Raza: #{img.breed}
							label Tama√±o: #{img.size}
							label Edad: #{img.age}							
				.pagination
					ul
						span#prev
							li="<"
						-for (var i=1; i<=result.total; i++)
							li
								a.pages(href="/favorites/"+i id="page"+i)=i
						span#next
							li=">"