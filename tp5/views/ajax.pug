if result.message
	.message
		h2=result.message
	a(href="/")
		img#close(src="/images/close.png", alt="salir")
else
	for img in result.imgsArray
		figure
			a(href="/dog/"+img.id)
				img.pic(src="/images/"+img.src+".jpg", alt="perro")
			figcaption
				if (img.fav==true)
					.fav.heart(id=img.id)
				else
					.heart(id=img.id)
				a(href="/dog/"+img.id)
					img(src="/images/glass.png", alt="ver").glass
				label#name #{img.name}
				label Raza: #{img.breed}
				label Tama√±o: #{img.size}
				label Edad: #{img.age}
	.pagination
		ul
			span#prev
				li="<"
			if total
				-for (var i=1; i<=total; i++)
					li
						a.pages(href="/all/"+i id="page"+i)=i
			if totalFilter
				-for (var i=1; i<=totalFilter; i++)
					li
						a.pages(href="/filter/"+i id="page"+i)=i
			if totalFav
				-for (var i=1; i<=totalFav; i++)
					li
						a.pages(href="/favorites/"+i id="page"+i)=i
			span#next
				li=">"